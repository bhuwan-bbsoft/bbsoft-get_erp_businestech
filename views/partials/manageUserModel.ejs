                        <th class="px-4 py-2 text-left text-lg font-medium text-gray-700">Email</th>
                        <th class="px-4 py-2 text-left text-lg font-medium text-gray-700">Role</th>
                        <th class="px-4 py-2 text-left text-lg font-medium text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example User Data -->
                    <tr>
                        <td class="px-4 py-2 text-gray-700">John Doe</td>
                        <td class="px-4 py-2 text-gray-700">john.doe@example.com</td>
                        <td class="px-4 py-2 text-gray-700">Admin</td>
                        <td class="px-4 py-2 text-gray-700">
                            <button onclick="openEditUserModel(1)" class="text-blue-600 hover:text-blue-800">Edit</button>
                            <button onclick="deleteUser(1)" class="text-red-600 hover:text-red-800 ml-2">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="px-4 py-2 text-gray-700">Jane Smith</td>
                        <td class="px-4 py-2 text-gray-700">jane.smith@example.com</td>
                        <td class="px-4 py-2 text-gray-700">User</td>
                        <td class="px-4 py-2 text-gray-700">
                            <button onclick="openEditUserModel(2)" class="text-blue-600 hover:text-blue-800">Edit</button>
                            <button onclick="deleteUser(2)" class="text-red-600 hover:text-red-800 ml-2">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add New User Modal -->
<div id="addNewUserModel" class="fixed flex inset-0 bg-gray-600 bg-opacity-50 hidden justify-center items-center z-50">
    <div class="modal-content bg-white p-6 rounded-lg w-[60%] h-[60%] max-h-screen overflow-auto shadow-xl">
        <!-- Close Button -->
        <div class="text-right">
            <button onclick="closeAddNewUserModel()" class="text-gray-500 hover:text-gray-700 text-lg">&times;</button>
        </div>

        <!-- Add New User Header -->
        <h2 class="text-3xl font-semibold text-center text-blue-600 mb-6">Add New User</h2>

        <!-- Form for Adding New User -->
        <form>
            <div class="mb-4">
                <label for="newUserName" class="block text-lg font-medium text-gray-800">Full Name</label>
                <input type="text" id="newUserName" name="newUserName" class="mt-2 p-2 w-full border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500" placeholder="John Doe" required />
            </div>
            <div class="mb-4">
                <label for="newUserEmail" class="block text-lg font-medium text-gray-800">Email Address</label>
                <input type="email" id="newUserEmail" name="newUserEmail" class="mt-2 p-2 w-full border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500" placeholder="john.doe@example.com" required />
            </div>
            <div class="mb-4">
                <label for="newUserRole" class="block text-lg font-medium text-gray-800">Role</label>
                <select id="newUserRole" name="newUserRole" class="mt-2 p-2 w-full border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500" required>
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                </select>
            </div>
            <div class="mt-6 flex justify-center">
                <button type="submit" class="bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Add User</button>
            </div>
        </form>
    </div>
</div>

